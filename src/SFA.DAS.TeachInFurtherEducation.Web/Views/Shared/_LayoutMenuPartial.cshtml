<header class="dfe-header" role="banner">
    <div class="dfe-width-container dfe-header__container">
        <div class="dfe-header__logo">
            <a class="dfe-header__link" href="@homeLink" aria-label="DfE homepage">
                <image src="/images/DesignSystem/dfe-logo.png" class="dfe-logo" alt=""/>
                <image src="/images/DesignSystem/dfe-logo-alt.png" class="dfe-logo-hover" alt=""/>
            </a>
        </div>
        <div class="dfe-header__content" id="content-header">
            <div class="dfe-header__menu">
                <button class="dfe-header__menu-toggle" id="toggle-menu" aria-controls="header-navigation" aria-expanded="false">Menu</button>
            </div>
            <div class="dfe-header__search">
                <image src="/images/DesignSystem/FurtherEducation.png" class="fe-logo" alt="share your skills"/>
            </div>
        </div>
    </div>
    <nav class="navbar" id="header-navigation"  aria-label="Primary navigation">
        <div class="navbar__container">
            <p class="navbar__title">
                <span id="label-navigation">Menu</span>
                <button class="navbar__close" id="close-menu">
                    <svg class="dfe-icon dfe-icon__close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" focusable="false" width="27" height="27">
                        <path d="M13.41 12l5.3-5.29a1 1 0 1 0-1.42-1.42L12 10.59l-5.29-5.3a1 1 0 0 0-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l5.29-5.3 5.29 5.3a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42z"></path>
                    </svg>
                    <span class="govuk-visually-hidden">Close menu</span>
                </button>
            </p>

            <div id="navbarNavDropdown">
                <ul class="navbar__nav">
                    @{
                        var dropdownMenuItems = DropdownMenuService.GetDropdownMenuItems();
                        var currentPath = Context.Request.Path.ToString();

                        // Function to check if any child (or grandchild) is active
                        bool IsAnyChildActive(DropdownMenuItem menuItem)
                        {
                            if (menuItem.HasChildren)
                            {
                                foreach (var child in menuItem.Children)
                                {
                                    if (child.HasChildren)
                                    {
                                        foreach (var grandChild in child.Children)
                                        {
                                            if (currentPath.Equals(grandChild.Url, StringComparison.OrdinalIgnoreCase))
                                                return true;
                                        }
                                    }
                                    else
                                    {
                                        if (currentPath.Equals(child.Url, StringComparison.OrdinalIgnoreCase))
                                            return true;
                                    }
                                }
                            }

                            return false;
                        }
                    }
                    @foreach (var dropdownMenuItem in dropdownMenuItems)
                    {
                        var isParentActive = IsAnyChildActive(dropdownMenuItem);
                        <li class="navbar__nav-item navbar__nav-item-dropdown @(isParentActive ? "navbar__nav-item--active" : "")">
                            @if (dropdownMenuItem.HasChildren)
                            {
                                <a class="navbar__link navbar__link--has-children @(currentPath.Equals(dropdownMenuItem.Url, StringComparison.OrdinalIgnoreCase) || isParentActive ? "navbar__link--active" : "")"
                                   href="@dropdownMenuItem.Url"
                                   id="dropdown@(dropdownMenuItem.Title?.Replace(" ", ""))"
                                   role="button" 
                                   data-bs-toggle="dropdown" 
                                   aria-expanded="false"
                                   onkeydown="handleDropdownKeydown(event, 'dropdown@(dropdownMenuItem.Title?.Replace(" ", ""))')">
                                    @dropdownMenuItem.Title
                                </a>
                                <ul class="navbar__dropdown" aria-labelledby="dropdown@(dropdownMenuItem.Title?.Replace(" ", ""))">
                                    @foreach (var child in dropdownMenuItem.Children)
                                    {
                                        if (child.HasChildren)
                                        {
                                            <li class="navbar__dropdown-item navbar__dropdown-item--has-children">
                                                <a class="navbar__dropdown-link @(currentPath.Equals(child.Url, StringComparison.OrdinalIgnoreCase) ? "navbar__dropdown-link--active" : "")"
                                                   href="@child.Url">
                                                    @child.Title
                                                </a>
                                                <ul class="navbar__dropdown-submenu">
                                                    @foreach (var grandChild in child.Children)
                                                    {
                                                        <li class="navbar__dropdown-submenu-item">
                                                            <a class="navbar__dropdown-submenu-link @(currentPath.Equals(grandChild.Url, StringComparison.OrdinalIgnoreCase) ? "navbar__dropdown-submenu-link--active" : "")"
                                                               href="@grandChild.Url">@grandChild.Title</a>
                                                        </li>
                                                    }
                                                </ul>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="navbar__dropdown-item">
                                                <a class="navbar__dropdown-link @(currentPath.Equals(child.Url, StringComparison.OrdinalIgnoreCase) ? "navbar__dropdown-link--active" : "")"
                                                   href="@child.Url">@child.Title</a>
                                            </li>
                                        }
                                    }
                                </ul>
                            }
                            else
                            {
                                <a class="navbar__link @(currentPath.Equals(dropdownMenuItem.Url, StringComparison.OrdinalIgnoreCase) ? "navbar__link--active" : "")"
                                   href="@dropdownMenuItem.Url">@dropdownMenuItem.Title</a>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>    
    
</header>


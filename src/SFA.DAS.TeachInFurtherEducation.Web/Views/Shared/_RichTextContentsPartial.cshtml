@using SFA.DAS.TeachInFurtherEducation.Contentful.Model
@using SFA.DAS.TeachInFurtherEducation.Contentful.Model.Interim
@using SFA.DAS.TeachInFurtherEducation.Web.Services
@model RichTextContents

<div id="@Model.DataId" class="govuk-width-container">
    @{
        var bgColor = "bg-fe-white";
        @if (!string.IsNullOrEmpty(Model.BackgroundColor) && Model.BackgroundColor == "Peach")
        {
            bgColor = "bg-fe-peach";
        }
        <div class="govuk-grid-row govuk-!-padding-top-6 @bgColor">
            <div class="govuk-grid-column-full">
                @ComponentService.ToHtmlString(@Model.PageContents)
            </div>
        </div>
    }
</div >
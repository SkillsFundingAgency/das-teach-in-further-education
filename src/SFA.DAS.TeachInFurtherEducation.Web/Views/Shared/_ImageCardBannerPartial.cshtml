@using SFA.DAS.TeachInFurtherEducation.Contentful.Model.Interim
@using SFA.DAS.TeachInFurtherEducation.Web.Services
@model ImageCardBanner;

@if (Model is { isLargeSize: true })
{
    if (Model.isTextLeftAligned)
    {
        @await Html.PartialAsync("ImageCardBanner/_ImageCardBanner_Large_Left", Model)
    }
    else
    {
        @await Html.PartialAsync("ImageCardBanner/_ImageCardBanner_Large_Right", Model)
    }
}
else
{
    if (Model.isTextLeftAligned)
    {
        @await Html.PartialAsync("ImageCardBanner/_ImageCardBanner_Medium_Left", Model)
    }
    else
    {
        @await Html.PartialAsync("ImageCardBanner/_ImageCardBanner_Medium_Right", Model)
    }
}
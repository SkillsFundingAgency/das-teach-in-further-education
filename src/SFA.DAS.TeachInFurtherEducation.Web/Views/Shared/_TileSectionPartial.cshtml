@using SFA.DAS.TeachInFurtherEducation.Contentful.Model.Interim
@using SFA.DAS.TeachInFurtherEducation.Web.Services
@model (TileSection, bool, bool)

<div class="govuk-grid-row">

    @if(Model.Item2)
    {

        <div class="govuk-grid-column-full">

            <hr class="govuk-grid-column-full das-hr" />

        </div>

    }

    @if(!string.IsNullOrWhiteSpace(Model.Item1.TileSectionHeading))
    {

        <div class="govuk-grid-column-full">

            <h3 class="govuk-heading-m">@Model.Item1.TileSectionHeading</h3>

        </div>

    }

    @if(Model.Item1.TileSectionDescription != null)
    {

        <div class="govuk-grid-column-full govuk-!-margin-bottom-4">
            
            @ComponentService.ToHtmlString(Model.Item1.TileSectionDescription)
        
        </div>

    }

    <div class="govuk-grid-column-full">

        <div class="das-grid-two-columns">

            @foreach (Tile tile in Model.Item1.Tiles.OrderBy(a => a.TileOrder))
            {

                @await Html.PartialAsync(

                    "_TilePartial",

                    (tile, Model.Item3)

                )

            }

        </div>

    </div>

</div>
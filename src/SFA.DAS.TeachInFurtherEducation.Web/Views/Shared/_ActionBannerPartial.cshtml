@using SFA.DAS.TeachInFurtherEducation.Contentful.Model.Interim
@model ActionBanner;

@if (Model != null)
{
    var bgColor = "bg-fe-blue";
    @if (Model.BackgroundColor == "Brown")
    {
        bgColor = "bg-fe-brown";
    }

    <section class="fe-action-banner govuk-!-margin-top-3 @bgColor">
        <div id="@Model.DataId" class="govuk-width-container  govuk-!-padding-top-5">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <p class="govuk-body">@Model.BannerText</p>
                </div>
                <div class="govuk-grid-column-one-third">
                    <a href="@Model.BannerLinkSource" title="@Model.BannerLinkText" class="govuk-link">@Model.BannerLinkText</a>
                </div>
            </div>
        </div>
    </section>
}

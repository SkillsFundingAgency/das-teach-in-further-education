@using SFA.DAS.TeachInFurtherEducation.Contentful.Model.Interim
@using SFA.DAS.TeachInFurtherEducation.Web.Helpers
@model LineSeparator;
@{
    var extraMargin = StringHelper.GetCssClassName();
    <style nonce="@Context.GetNonce()">
    .@extraMargin {
        background-color: @Model.BackgroundColor;
        margin-top: @(string.IsNullOrEmpty(Model.TopMargin) ? "0" : Model.TopMargin + "px");
        margin-bottom: @(string.IsNullOrEmpty(Model.BottomMargin) ? "0" : Model.BottomMargin + "px");
    }
</style>
    if (Model != null)
    {
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div id="@Model.DataId" class="govuk-grid-column-full fe-line-separator @extraMargin">&nbsp;</div>
            </div>
        </div>
    }
}
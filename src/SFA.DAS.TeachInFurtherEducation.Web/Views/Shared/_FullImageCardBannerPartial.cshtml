@using SFA.DAS.TeachInFurtherEducation.Contentful.Model.Interim
@using SFA.DAS.TeachInFurtherEducation.Web.Services
@model FullImageCardBanner;

@if (Model != null)
{
    <div id="@Model.DataId" class="govuk-width-container fe-full-image-card-banner">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <img src="@ComponentService.GetMediaImageSource(Model.BannerImage)" alt="@Model.BannerTitle"/>
            </div>
        </div>
        <div class="govuk-grid-row govuk-!-padding-3">
            <div class="govuk-grid-column-full">
                <h3>@Model.BannerTitle</h3>
                @ComponentService.ToHtmlString(Model.BannerContents)
            </div>
        </div>
    </div>
}